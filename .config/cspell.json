{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en-US",
  "useGitignore": true,
  "words": [],
  "flagWords": [],
  "ignorePaths": [
    "*.DotSettings",
    "*.svg",
    ".config/cspell.json",
    ".config/dicts/**",
    ".config/dotnet-tools.json",
    ".vscode/*",
    "Tests/Dummies/**/Snapshots/**",
    "Tests/Integration/*.patch",
    "Tests/Integration/*/**"
  ],
  "dictionaries": [
    "dotnet-ext",
    "ilcodes",
    "project-words"
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./dicts/project-words.txt",
      "addWords": true
    },
    {
      "name": "ilcodes",
      "path": "./dicts/ilcodes.txt",
      "addWords": true
    },
    {
      "name": "dotnet-ext",
      "path": "./dicts/dotnet-ext.txt",
      "addWords": true
    }
  ],
  "overrides": [
    {
      "filename": "*.tt",
      "dictionaries": [
        "csharp"
      ]
    }
  ]
}