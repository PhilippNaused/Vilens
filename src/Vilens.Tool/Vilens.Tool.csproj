<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net9.0;net10.0</TargetFrameworks>
    <IsAotCompatible>true</IsAotCompatible>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>Vilens</RootNamespace>
    <NoWarn>$(NoWarn);CA2007</NoWarn>
    <PublishAot Condition="'$(Aot)' != ''">true</PublishAot>
  </PropertyGroup>

  <Target Name="CleanLogs" AfterTargets="Clean">
    <ItemGroup>
      <LogFiles Include="$(TargetDir)Vilens.log" />
    </ItemGroup>
    <Delete Files="@(LogFiles)" />
  </Target>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Vilens\Vilens.csproj" />
  </ItemGroup>

</Project>
